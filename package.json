{
    "name": "checkflow",
    "private": true,
    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev -- --turbo",
        "lint": "turbo lint",
        "db:push": "cd apps/web; pnpm run db:push",
        "db:studio": "cd apps/web; pnpm run db:studio",
        "format": "biome check . --apply-unsafe"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.6.4",
        "tsconfig": "workspace:*",
        "prettier": "^3.2.5",
        "turbo": "latest"
    },
    "packageManager": "pnpm@8.9.0",
    "engines": {
        "node": ">=18"
    }
}
